{
    "name": "blog",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "dev:with-server": "concurrently \"pnpm --filter server dev\" \"pnpm dev\"",
        "start:server": "pnpm --filter server dev",
        "build": "next build",
        "start": "next start",
        "lint": "next lint",
        "clean": "rm -rf .next && rm -rf node_modules/.cache",
        "dev:clean": "pnpm clean && pnpm dev",
        "db:generate": "prisma generate",
        "db:push": "prisma db push",
        "db:seed": "tsx prisma/seed.ts",
        "db:reset": "prisma migrate reset --force",
        "db:setup": "prisma db push && pnpm db:seed",
        "test": "vitest",
        "test:ui": "vitest --ui",
        "test:run": "vitest run",
        "test:coverage": "vitest run --coverage",
        "test:watch": "vitest --watch",
        "test:debug": "vitest --inspect-brk",
        "test:performance": "node scripts/test-performance.js",
        "test:optimized": "vitest run --reporter=verbose --maxConcurrency=1",
        "test:fast": "vitest run --reporter=basic --maxConcurrency=1",
        "test:ci": "npm run test:coverage && npm run test:performance",
        "test:helper": "node scripts/test-helper.js",
        "test:create": "node scripts/test-helper.js create-test",
        "test:analyze": "node scripts/test-helper.js analyze",
        "test:suggestions": "node scripts/test-helper.js suggestions"
    },
    "prisma": {
        "seed": "tsx prisma/seed.ts"
    },
    "dependencies": {
        "@corn12138/hooks": "workspace:*",

{
    "name": "server",
    "version": "0.1.0",
    "description": "NestJS backend for blog and lowcode platform",
    "private": true,
    "scripts": {
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\"",
        "start": "nest start",
        "dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
        "test": "vitest",
        "test:run": "vitest run",
        "test:ui": "vitest --ui",
        "test:watch": "vitest --watch",
        "test:auth": "vitest run --reporter=verbose src/auth",
        "test:debug": "vitest --inspect-brk",
        "test:e2e": "vitest run --reporter=verbose test",
        "pact:verify": "pact-verifier --provider-base-url=http://localhost:3001 --pact-url=../../testing/contracts/pacts/blog-app-server-api.json",
        "typeorm": "typeorm-ts-node-commonjs",
        "migration:create": "typeorm-ts-node-commonjs migration:create",
        "migration:generate": "typeorm-ts-node-commonjs -d src/database/migrations/config.ts migration:generate",
        "migration:run": "typeorm-ts-node-commonjs -d src/database/migrations/config.ts migration:run",
        "migration:revert": "typeorm-ts-node-commonjs -d src/database/migrations/config.ts migration:revert",
        "db:seed": "ts-node src/database/seeds/seed.ts",
        "migrate:prod": "cross-env NODE_ENV=production npm run migration:run",
        "seed:prod": "cross-env NODE_ENV=production npm run db:seed",
        "deploy:huaweicloud": "bash ./deploy-to-huaweicloud.sh",
        "db:check": "ts-node -r tsconfig-paths/register ./src/scripts/check-db-connection.ts",
        "db:setup": "bash ./setup-database.sh",
        "db:setup:prod": "cross-env NODE_ENV=production bash ./setup-database.sh",
        "db:init-manual": "ts-node src/scripts/run-sql-directly.ts src/database/schema.sql",
        "fix:bcrypt": "bash ./fix-bcrypt.sh",
        "db:seed:safe": "ts-node -r tsconfig-paths/register ./src/database/seeds/seed.ts",
        "db:seed:simple": "ts-node src/database/seeds/simple-seed.ts",
        "db:seed:prod:simple": "cross-env NODE_ENV=production ts-node src/database/seeds/simple-seed.ts",
        "seed:mobile-docs": "ts-node -r tsconfig-paths/register src/scripts/seed-mobile-docs.ts",
        "setup:mobile": "ts-node -r tsconfig-paths/register src/scripts/run-migration-and-seed.ts",
        "test:db": "ts-node -r tsconfig-paths/register src/scripts/test-db-connection.ts",
        "db:check-data": "ts-node src/scripts/check-db-data.ts",
        "db:verify-access": "ts-node src/scripts/verify-db-user-access.ts",
        "db:create-tables": "ts-node src/scripts/create-tables-directly.ts",
        "db:create-tags-table": "ts-node src/scripts/create-tags-table.ts",
        "db:full-setup": "npm run db:check && npm run db:create-tables && npm run db:seed:simple",
        "db:fix-tags-table": "ts-node src/scripts/fix-tags-table.ts",
        "db:setup-tags": "npm run db:fix-tags-table && npm run db:create-sample-tags",
        "test:users": "vitest run --reporter=verbose src/users --coverage",
        "test:watch-auth": "vitest run --reporter=verbose src/auth --watch",
        "test:coverage": "vitest run --coverage",
        "test:coverage-report": "vitest run --coverage && open coverage/index.html",
        "test:unit": "vitest run --reporter=verbose src",
        "test:integration": "vitest run --reporter=verbose test",
        "test:helper": "node scripts/backend-test-helper.js",
        "test:create": "node scripts/backend-test-helper.js create-test",
        "test:analyze": "node scripts/backend-test-helper.js analyze",
        "test:suggestions": "node scripts/backend-test-helper.js suggestions",
        "test:update-jest": "node scripts/update-jest-to-vitest.js update",
        "test:check-jest": "node scripts/update-jest-to-vitest.js check",
        "test:fix-typeorm": "node scripts/fix-typeorm-tests.js fix",
        "test:typeorm-config": "node scripts/fix-typeorm-tests.js config",
        "test:create-simple": "node scripts/create-simple-tests.js all",
        "test:create-module": "node scripts/create-simple-tests.js module",
        "test:fix-imports": "node scripts/fix-test-imports.js fix",
        "test:api": "vitest run test/api/**/*.spec.ts",
        "test:performance": "vitest run test/performance/**/*.spec.ts",
        "test:all": "vitest run",
        "test:load": "vitest run test/performance/load-test.spec.ts",
        "test:stress": "vitest run test/performance/stress-test.spec.ts",
        "db:create-test-user": "ts-node src/scripts/create-test-user.ts",
        "db:create-sample-tags": "ts-node src/scripts/create-sample-tags.ts",
        "db:clean-recreate-tags": "ts-node src/scripts/clean-and-recreate-tags.ts",
        "db:create-articles-table": "ts-node src/scripts/create-articles-table.ts",
        "db:create-article-tag-relations": "ts-node src/scripts/create-article-tag-relations.ts",
        "db:setup-articles": "npm run db:create-articles-table && npm run db:create-article-tag-relations",
        "db:fix-articles-table": "ts-node src/scripts/fix-articles-table.ts"
    },
    "dependencies": {
        "@nestjs/cache-manager": "^3.0.1",
        "@nestjs/common": "^9.0.0",
        "@nestjs/config": "^2.3.2",
        "@nestjs/core": "^9.0.0",
        "@nestjs/jwt": "^10.0.3",
        "@nestjs/passport": "^9.0.3",
        "@nestjs/platform-express": "^9.0.0",
        "@nestjs/swagger": "^6.3.0",
        "@nestjs/terminus": "^11.0.0",
        "@nestjs/throttler": "^4.0.0",
        "@nestjs/typeorm": "^9.0.1",
        "@shared/utils": "workspace:*",
        "@types/multer": "^1.4.12",
        "@willsoto/nestjs-prometheus": "^6.0.2",
        "bcrypt": "^5.1.0",
        "bcryptjs": "^2.4.3",
        "cache-manager": "4.1.0",
        "cache-manager-redis-store": "2.0.0",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.0",
        "cookie-parser": "^1.4.6",
        "csurf": "^1.11.0",
        "dompurify": "^3.0.3",
        "helmet": "^7.0.0",
        "multer": "^2.0.0",
        "nest-winston": "^1.9.3",
        "nestjs-prometheus": "^4.6.1",
        "passport": "^0.6.0",
        "passport-jwt": "^4.0.1",
        "passport-local": "^1.0.0",
        "pg": "^8.11.0",
        "prom-client": "^15.1.3",
        "reflect-metadata": "^0.1.13",
        "rxjs": "^7.8.1",
        "typeorm": "^0.3.16",
        "winston": "^3.9.0",
        "xss": "^1.0.14"
    },
    "devDependencies": {
        "@nestjs/cli": "^9.0.0",
        "@nestjs/schematics": "^9.0.0",
        "@nestjs/testing": "^9.4.3",
        "@types/autocannon": "^7.12.7",
        "@types/bcrypt": "^5.0.0",
        "@types/bcryptjs": "^2.4.6",
        "@types/cookie-parser": "^1.4.3",
        "@types/csurf": "^1.11.5",
        "@types/dotenv": "6.1.1",
        "@types/express": "^4.17.21",
        "@types/nock": "^11.1.0",
        "@types/node": "^20.2.5",
        "@types/passport-jwt": "^3.0.8",
        "@types/passport-local": "^1.0.35",
        "@types/pg": "^8.15.2",
        "@types/supertest": "^2.0.16",
        "@typescript-eslint/eslint-plugin": "^5.59.7",
        "@typescript-eslint/parser": "^5.59.7",
        "@vitest/coverage-v8": "^3.2.4",
        "@vitest/ui": "^3.2.4",
        "autocannon": "^8.0.0",
        "cross-env": "^7.0.3",
        "dotenv": "^16.5.0",
        "eslint": "^8.41.0",
        "nock": "^14.0.10",
        "pg-mem": "^3.0.5",
        "source-map-support": "^0.5.21",
        "supertest": "^6.3.4",
        "testcontainers": "^10.28.0",
        "ts-loader": "^9.4.3",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.0.4",
        "vitest": "^3.2.4"
    }
}
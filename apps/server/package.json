{
    "name": "server",
    "version": "0.1.0",
    "description": "NestJS backend for blog and mobile platform",
    "private": true,
    "scripts": {
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\"",
        "start": "nest start",
        "dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
        "test": "vitest",
        "test:run": "vitest run",
        "test:ui": "vitest --ui",
        "test:watch": "vitest --watch",
        "test:debug": "vitest --inspect-brk",
        "test:reporter": "vitest run --reporter=verbose",
        "test:unit": "vitest run src/**/*.spec.ts --reporter=verbose",
        "test:integration": "vitest run test/integration/**/*.spec.ts --reporter=verbose",
        "test:e2e": "vitest run test/e2e/**/*.spec.ts --reporter=verbose",
        "test:api": "vitest run test/api/**/*.spec.ts --reporter=verbose",
        "test:performance": "vitest run test/performance/**/*.spec.ts --reporter=verbose",
        "test:coverage": "vitest run --coverage",
        "test:coverage:unit": "vitest run src/**/*.spec.ts --coverage",
        "test:coverage:integration": "vitest run test/integration/**/*.spec.ts --coverage",
        "test:coverage:e2e": "vitest run test/e2e/**/*.spec.ts --coverage",
        "test:coverage:api": "vitest run test/api/**/*.spec.ts --coverage",
        "test:coverage:report": "vitest run --coverage && open coverage/index.html",
        "test:coverage:ci": "vitest run --coverage --reporter=json --reporter=html --reporter=junit",
        "test:performance:monitor": "node scripts/performance-test.js",
        "test:comprehensive": "node scripts/run-comprehensive-tests.js",
        "test:benchmark": "vitest run test/performance/**/*.spec.ts --reporter=verbose --run",
        "test:fast": "vitest run --reporter=default --no-coverage",
        "test:watch:fast": "vitest --watch --reporter=default --no-coverage",
        "test:changed": "vitest run --changed",
        "test:related": "vitest run --related",
        "test:report": "vitest run --reporter=verbose --reporter=json --reporter=html --reporter=junit",
        "test:report:json": "vitest run --reporter=json --outputFile.json=test-results/results.json",
        "test:report:html": "vitest run --reporter=html --outputFile.html=test-results/results.html",
        "test:report:junit": "vitest run --reporter=junit --outputFile.junit=test-results/junit.xml",
        "test:retry": "vitest run --retry=3",
        "test:concurrent": "vitest run --maxConcurrency=10",
        "test:isolate": "vitest run --isolate",
        "test:auth": "vitest run src/auth/**/*.spec.ts --reporter=verbose",
        "test:mobile": "vitest run src/mobile/**/*.spec.ts --reporter=verbose",
        "test:user": "vitest run src/user/**/*.spec.ts --reporter=verbose",
        "test:article": "vitest run src/article/**/*.spec.ts --reporter=verbose",
        "test:database": "vitest run src/database/**/*.spec.ts --reporter=verbose",
        "test:ci": "vitest run --reporter=json --reporter=junit --coverage --coverage.reporter=json --coverage.reporter=lcov",
        "test:ci:unit": "vitest run src/**/*.spec.ts --reporter=json --coverage",
        "test:ci:integration": "vitest run test/integration/**/*.spec.ts --reporter=json",
        "test:debug:unit": "vitest run src/**/*.spec.ts --inspect-brk",
        "test:debug:integration": "vitest run test/integration/**/*.spec.ts --inspect-brk",
        "test:debug:e2e": "vitest run test/e2e/**/*.spec.ts --inspect-brk",
        "test:clean": "rm -rf coverage test-results .vitest-cache",
        "test:reset": "vitest run --clearCache",
        "test:report:generate": "node scripts/generate-test-report.js",
        "test:report:full": "pnpm test:run && pnpm test:coverage && pnpm test:report:generate",
        "test:report:open": "open test-results/test-report-*.html",
        "test:enhanced": "vitest run --reporter=verbose --reporter=./test/reporters/custom-reporter.ts",
        "test:watch:enhanced": "vitest --watch --reporter=verbose --reporter=./test/reporters/custom-reporter.ts",
        "test:benchmark:memory": "vitest run --reporter=verbose --logHeapUsage",
        "test:stress": "for i in {1..5}; do pnpm test:run; done",
        "test:matrix": "pnpm test:unit && pnpm test:integration && pnpm test:e2e",
        "test:quality": "pnpm test:coverage && pnpm test:performance && pnpm test:report:generate",
        "typeorm": "typeorm-ts-node-commonjs",
        "migration:create": "typeorm-ts-node-commonjs migration:create",
        "migration:generate": "typeorm-ts-node-commonjs -d src/database/migrations/config.ts migration:generate",
        "migration:run": "typeorm-ts-node-commonjs -d src/database/migrations/config.ts migration:run",
        "migration:revert": "typeorm-ts-node-commonjs -d src/database/migrations/config.ts migration:revert",
        "migrate:prod": "cross-env NODE_ENV=production npm run migration:run",
        "db:seed": "ts-node src/database/seeds/seed.ts",
        "db:seed:simple": "ts-node src/database/seeds/simple-seed.ts",
        "seed:prod": "cross-env NODE_ENV=production npm run db:seed",
        "seed:mobile-docs": "ts-node -r tsconfig-paths/register src/scripts/seed-mobile-docs.ts",
        "db:check": "ts-node -r tsconfig-paths/register ./src/scripts/check-db-connection.ts",
        "db:setup": "bash ./setup-database.sh",
        "db:setup:prod": "cross-env NODE_ENV=production bash ./setup-database.sh",
        "deploy:huaweicloud": "bash ./deploy-to-huaweicloud.sh"
    },
    "dependencies": {
        "@nestjs/cache-manager": "^3.0.1",
        "@nestjs/common": "^9.0.0",
        "@nestjs/config": "^2.3.2",
        "@nestjs/core": "^9.0.0",
        "@nestjs/jwt": "^10.0.3",
        "@nestjs/passport": "^9.0.3",
        "@nestjs/platform-express": "^9.0.0",
        "@nestjs/swagger": "^6.3.0",
        "@nestjs/terminus": "^11.0.0",
        "@nestjs/throttler": "^4.0.0",
        "@nestjs/typeorm": "^9.0.1",
        "@shared/utils": "workspace:*",
        "@types/bcrypt": "^6.0.0",
        "@types/multer": "^1.4.12",
        "@willsoto/nestjs-prometheus": "^6.0.2",
        "bcrypt": "^6.0.0",
        "bcryptjs": "^2.4.3",
        "cache-manager": "4.1.0",
        "cache-manager-redis-store": "2.0.0",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.0",
        "cookie-parser": "^1.4.6",
        "dompurify": "^3.0.3",
        "helmet": "^7.0.0",
        "multer": "^2.0.0",
        "nest-winston": "^1.9.3",
        "passport": "^0.6.0",
        "passport-jwt": "^4.0.1",
        "passport-local": "^1.0.0",
        "pg": "^8.11.0",
        "prom-client": "^15.1.3",
        "reflect-metadata": "^0.1.13",
        "rxjs": "^7.8.1",
        "typeorm": "^0.3.16",
        "winston": "^3.9.0",
        "xss": "^1.0.14"
    },
    "devDependencies": {
        "@faker-js/faker": "^9.3.0",
        "@nestjs/cli": "^9.0.0",
        "@nestjs/schematics": "^9.0.0",
        "@nestjs/testing": "^9.4.3",
        "@types/bcryptjs": "^2.4.6",
        "@types/cookie-parser": "^1.4.3",
        "@types/express": "^4.17.21",
        "@types/node": "^20.2.5",
        "@types/passport-jwt": "^3.0.8",
        "@types/passport-local": "^1.0.35",
        "@types/pg": "^8.15.2",
        "@types/supertest": "^2.0.16",
        "@typescript-eslint/eslint-plugin": "^5.59.7",
        "@typescript-eslint/parser": "^5.59.7",
        "@vitest/coverage-v8": "^3.2.4",
        "@vitest/ui": "^3.2.4",
        "cross-env": "^7.0.3",
        "dotenv": "^16.5.0",
        "eslint": "^8.41.0",
        "supertest": "^6.3.4",
        "testcontainers": "^10.28.0",
        "ts-loader": "^9.4.3",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.0.4",
        "vitest": "^3.2.4"
    }
}
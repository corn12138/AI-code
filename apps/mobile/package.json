{
    "name": "mobile-articles",
    "private": true,
    "version": "0.1.0",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "dev:ssr": "nodemon --exec ts-node server/index.ts",
        "build": "tsc && vite build",
        "build:ssr": "vite build --ssr server/entry-server.tsx && vite build",
        "build:native": "vite build --mode native --base='./' --outDir=dist-native",
        "build:android": "npm run build:native && npm run copy:android",
        "build:ios": "npm run build:native && npm run copy:ios",
        "copy:android": "mkdir -p ../android-native/app/src/main/assets/www && cp -r dist-native/* ../android-native/app/src/main/assets/www/",
        "copy:ios": "mkdir -p ../ios-native/WorkbenchApp/www && cp -r dist-native/* ../ios-native/WorkbenchApp/www/",
        "preview": "vite preview",
        "preview:ssr": "cross-env NODE_ENV=production ts-node server/index.ts",
        "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "test": "vitest run",
        "test:watch": "vitest",
        "coverage": "vitest run --coverage"
    },
    "dependencies": {
        "@corn12138/hooks": "workspace:*",
        "@shared/auth": "workspace:*",
        "@shared/ui": "workspace:*",
        "@shared/utils": "workspace:*",
        "@tailwindcss/vite": "^4.1.14",
        "axios": "^1.4.0",
        "clsx": "^2.0.0",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "express": "^4.18.2",
        "lucide-react": "^0.263.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-hot-toast": "^2.5.2",
        "react-router-dom": "^6.11.2",
        "zustand": "^4.3.8"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^6.9.1",
        "@testing-library/react": "^16.3.0",
        "@testing-library/user-event": "^14.6.1",
        "@types/compression": "^1.7.2",
        "@types/cors": "^2.8.13",
        "@types/express": "^4.17.17",
        "@types/react": "^18.2.7",
        "@types/react-dom": "^18.2.4",
        "@typescript-eslint/eslint-plugin": "^5.59.7",
        "@typescript-eslint/parser": "^5.59.7",
        "@vitejs/plugin-react": "^4.0.0",
        "@vitest/coverage-v8": "^3.2.4",
        "@vitest/ui": "^3.2.4",
        "eslint": "^8.41.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.3.5",
        "nodemon": "^3.0.1",
        "ts-node": "^10.9.1",
        "typescript": "^5.0.4",
        "vite": "^4.3.9",
        "vite-tsconfig-paths": "^4.2.0",
        "vitest": "^3.2.4"
    }
}
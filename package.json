{
    "name": "ai-code-monorepo",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "dev:blog": "pnpm --filter blog dev",
        "dev:lowcode": "pnpm --filter lowcode dev",
        "dev:server": "pnpm --filter server dev",
        "dev": "pnpm -r --parallel dev",
        "build": "pnpm -r build",
        "test": "pnpm -r test",
        "lint": "pnpm -r lint",
        "prepare": "husky install",
        "security-audit": "node scripts/security-audit.js",
        "dev:all": "pnpm run --parallel dev",
        "build:all": "pnpm run --parallel build",
        "lint:all": "pnpm run --parallel lint",
        "type-check": "tsc --noEmit --project tsconfig.json",
        "type-check:apps": "pnpm --filter './apps/*' run type-check",
        "lint:shared": "eslint shared/ --ext .ts,.tsx",
        "build:shared": "pnpm --filter './shared/*' run build",
        "clean": "pnpm run --parallel clean && rm -rf node_modules",
        "deps:check": "pnpm outdated --recursive",
        "deps:update": "pnpm update --recursive --interactive",
        "cleanup": "bash scripts/cleanup-duplicates.sh"
    },
    "engines": {
        "node": ">=16.0.0",
        "pnpm": ">=7.0.0"
    },
    "dependencies": {
        "axios": "^1.4.0",
        "dompurify": "^3.0.5",
        "jsdom": "^22.1.0",
        "lodash": "^4.17.21",
        "marked": "^9.0.0",
        "xss": "^1.0.14"
    },
    "devDependencies": {
        "@types/dompurify": "^3.0.2",
        "@types/jsdom": "^21.1.1",
        "husky": "^8.0.3",
        "lint-staged": "^13.2.2",
        "prettier": "^2.8.8"
    }
}
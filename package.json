{
    "name": "ai-code-monorepo",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "dev:blog": "pnpm --filter blog dev",
        "dev:lowcode": "pnpm --filter lowcode dev",
        "dev:mobile": "pnpm --filter mobile dev",
        "dev:server": "pnpm --filter server dev",
        "dev": "pnpm -r --parallel dev",
        "build": "pnpm -r build",
        "test": "pnpm -r test",
        "lint": "pnpm -r lint",
        "prepare": "husky install",
        "security-audit": "node scripts/security-audit.js",
        "dev:all": "pnpm run --parallel dev",
        "build:all": "pnpm run --parallel build",
        "lint:all": "pnpm run --parallel lint",
        "type-check": "tsc --noEmit --project tsconfig.json",
        "type-check:apps": "pnpm --filter './apps/*' run type-check",
        "lint:shared": "eslint shared/ --ext .ts,.tsx",
        "build:shared": "pnpm --filter './shared/*' run build",
        "clean": "pnpm run --parallel clean && rm -rf node_modules",
        "deps:check": "pnpm outdated --recursive",
        "deps:update": "pnpm update --recursive --interactive",
        "cleanup": "bash scripts/cleanup-duplicates.sh",
        "test:unit": "jest --config testing/jest.config.js --selectProjects 'Blog App' 'Server App' 'Lowcode App' 'Mobile App' 'Shared Libraries'",
        "test:integration": "jest --config testing/jest.config.js --testPathPattern=integration",
        "test:e2e": "cd testing/e2e && npx playwright test",
        "test:e2e:ui": "cd testing/e2e && npx playwright test --ui",
        "test:coverage": "jest --config testing/jest.config.js --coverage",
        "test:watch": "jest --config testing/jest.config.js --watch",
        "test:ci": "jest --config testing/jest.config.js --ci --coverage --watchAll=false",
        "test:orchestrator": "cd testing/orchestrator && python main.py run",
        "test:orchestrator:unit": "cd testing/orchestrator && python main.py run --suite unit",
        "test:orchestrator:integration": "cd testing/orchestrator && python main.py run --suite integration",
        "test:orchestrator:e2e": "cd testing/orchestrator && python main.py run --suite e2e",
        "test:orchestrator:all": "cd testing/orchestrator && python main.py run --suite all",
        "test:performance": "cd testing/performance && k6 run k6/load-test.js",
        "test:security": "cd testing/security && npm audit && snyk test",
        "test:visual": "cd testing/e2e && npx playwright test --config playwright-visual.config.ts",
        "test:setup": "cd testing/orchestrator && python main.py init",
        "test:reports": "open testing/reports/html/index.html",
        "test:clean": "rm -rf testing/reports/* && rm -rf coverage/*",
        "test:install": "cd testing/orchestrator && pip install -r requirements.txt && npx playwright install"
    },
    "engines": {
        "node": ">=16.0.0",
        "pnpm": ">=7.0.0"
    },
    "dependencies": {
        "axios": "^1.4.0",
        "dompurify": "^3.0.5",
        "jsdom": "^22.1.0",
        "lodash": "^4.17.21",
        "marked": "^9.0.0",
        "xss": "^1.0.14"
    },
    "devDependencies": {
        "@types/dompurify": "^3.0.2",
        "@types/jsdom": "^21.1.1",
        "husky": "^8.0.3",
        "lint-staged": "^13.2.2",
        "prettier": "^2.8.8"
    }
}